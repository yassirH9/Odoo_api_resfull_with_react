<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="empresa_report_template">
            <t t-call="web.html_container">
                <head>
                    <style>
 .table1 {
 border-bottom: 1px solid #000000;
 border-top: 1px solid #000000;
 border-spacing: 0px;
 margin-left: auto;
 margin-right: auto;
 align: center;
 }
 .table1 tbody tr:nth-of-type(odd) {
 background-color: #d6dbdf;
 }
 .table2 {
 width: 100%;
 border-bottom: 1px solid #000000;
 align: center;
 }
 .tr2 {
 border-bottom: 1px solid #000000;
 }
 </style>
                </head>
                <div class="page">
                    <br />
                    <t t-foreach='docs' t-as='o'>
                        <table class="table2">
                            <tr>
                                <td colspan="3" align="left">
                                    <img t-attf-src="data:image/*;base64,{{o.imagen}}"
                                        height="80px" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" align="left">
                                    <b>
                                        <span t-field="o.nombre" />
                                    </b>
                                </td>
                            </tr>
                        </table>
                        <br />
                        <br />
                        <table class="table1">
                            <thead>
                                <tr class="tr2">
                                    <td width="300" align="center">
                                        <font size="5">
                                            <b>Nombre de proyecto</b>
                                        </font>
                                    </td>
                                    <td width="300" align="center">
                                        <font size="5">
                                            <b>Tasks</b>
                                        </font>
                                    </td>
                                    <td width="300" align="center">
                                        <font size="5">
                                            <b>Descripci√≥n</b>
                                        </font>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="tr1" t-foreach='o.proyectos' t-as='line'
                                    align="center">
                                    <td class="td1" width="300">
                                        <span t-esc="line.name" />
                                    </td>
                                    <td class="td1" width="300" align="center">
                                        <span t-esc="line.label_tasks" />
                                    </td>
                                    <td class="td1" width="300" align="center">
                                        <span t-esc="line.description" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo> 